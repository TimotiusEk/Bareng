<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.ratingapp.ShowResult">

    <TextView
        android:text="Driver Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Driver_Rating"
        android:textStyle="normal|bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Journey_Rating"
        android:layout_alignStart="@+id/Journey_Rating" />

    <TextView
        android:text="Car Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Car_Rating"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/Journey_Rating" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/Driver_Rating"
        android:layout_alignBottom="@+id/Driver_Rating"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Journey Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Journey_Rating"
        android:textStyle="normal|bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Car_Rating"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Car Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Car_Review"
        android:layout_below="@+id/Driver_Rating"
        android:layout_alignParentStart="true"
        android:layout_marginTop="62dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Journey Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/Journey_Review"
        android:textStyle="normal|bold"
        android:layout_below="@+id/Car_Review"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Driver_Review"
        android:layout_alignEnd="@+id/textView11"
        android:id="@+id/textView14" />

    <TextView
        android:text="Driver Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Driver_Review"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/Journey_Review"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/Journey_Rating"
        android:layout_alignBottom="@+id/Journey_Rating"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignBaseline="@+id/Journey_Review"
        android:layout_alignBottom="@+id/Journey_Review"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/Car_Review"
        android:layout_alignBottom="@+id/Car_Review"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginStart="12dp" />

</RelativeLayout>
